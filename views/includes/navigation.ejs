<div class="backdrop"></div>
<header class="main-header">
    &nbsp;&nbsp;<i class="fas fa-headphones-alt logo-lap">&nbsp;<span id="logo" class="logo-lap">Boat</span></i
  >

  <button id="side-menu-toggle"><i class="fas fa-bars"></i></button>
    <br />
    <br />
    <br />
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <% if (isAuthenticated1) { %>
                <li class="main-header__item" id="navs-link">
                    <a class="<%= path === '/home' ? 'active' : '' %>" href="/home">Home</a>
                </li>
                <li class="main-header__item" id="navs-link1">
                    <a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a
        >
      </li>
      <li class="main-header__item" id="navs-link2">
        <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">
          Cart</a
        >
      </li>
      <li class="main-header__item" id="navs-link3">
        <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders"
          >Orders</a
        >
      </li>
      <% if (isAdmin) { %>
      <li class="main-header__item">
        <a
          class="<%= path === '/admin/add-product' ? 'active' : '' %>"
          href="/admin/add-product"
          >Add Product
        </a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin Products
        </a>
                </li>
                <% } %>
                    <% } %>
                        <% if (!isAuthenticated1) { %>
                            <li class="main-header__item" id="navs-link-pre">
                                <a class="<%= path === '/home' ? 'active' : '' %>" href="/home">Home</a>
                            </li>
                            <li class="main-header__item" id="navs-link-pre1">
                                <a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a
        >
      </li>
      <% } %>
    </ul>
    <ul class="main-header__item-list">
      <% if (!isAuthenticated1) { %>
      <li class="main-header__item">
        <a class="<%= path === '/login' ? 'active' : '' %>" href="/login"
          >Login</a
        >
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup"
          >Signup</a
        >
      </li>
      <% } else { %>
      <li class="main-header__item">
        <form action="/logout" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button type="submit">Logout</button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>
